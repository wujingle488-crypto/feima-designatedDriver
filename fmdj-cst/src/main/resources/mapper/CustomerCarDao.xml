<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fmdj.cst.db.dao.CustomerCarDao">
    <!--  添加车辆  -->
    <insert id="insert" parameterType="com.fmdj.cst.db.pojo.CustomerCarEntity">
        INSERT INTO tb_customer_car
        SET customer_id = #{customerId},
            car_plate = #{carPlate},
            car_type = #{carType}
    </insert>

    <!--  查询车辆列表  -->
    <select id="selectCustomerCarList" parameterType="long" resultType="HashMap">
        SELECT CAST(id AS CHAR) AS id,
               car_plate        AS carPlate,
               car_type         AS carType
        FROM tb_customer_car
        WHERE customer_id = #{customerId}
    </select>

    <!--  根据ID删除车辆  -->
    <delete id="deleteCustomerCarById" parameterType="long">
        DELETE
        FROM tb_customer_car
        WHERE id = #{id}
    </delete>
</mapper>
